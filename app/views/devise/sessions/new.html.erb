<div class="content-holder scale-bg2">
  <div class="display full-height">
    <!-- title -->
      <div class="fixed-title">
        <p>Log In</p>
      </div>
    <!-- title end-->
      <div class="full-height-wrap fixed-wrap">
        <div class="bg">

          <div class=" d-flex justify-content-center container" style=" margin: 100px auto;">
            <div class="row align-items-center">
              <div class="col-12">
                <div class="login-box">
                  <h2>Log in</h2>

                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="user-box">
                    <%= f.input :username,
                                                    required: true,
                                                    input_html: { autocomplete: 'username' } %>
                    <%= f.input :email,
                                                    required: false,
                                                    autofocus: true,
                                                    input_html: { autocomplete: "email" } %>
                    <%= f.input :password,
                                                    required: false,
                                                    input_html: { autocomplete: "current-password" } %>
                    <%= f.input :remember_me,
                                                    class: 'remember-me',
                                                    as: :boolean if devise_mapping.rememberable? %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: 'btn btn-secondary-gray w-100' %>
                  </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
                </div>

              </div>
            </div>
          </div>

      </div>
    </div>
  </div>
</div>
